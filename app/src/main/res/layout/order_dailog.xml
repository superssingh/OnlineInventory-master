<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ab4e2"
    android:orientation="vertical"
    android:padding="5dp">

    <EditText
        android:id="@+id/BuyerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buyer Name" />

    <EditText
        android:id="@+id/BuyerMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Buyer Mobile Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/BuyerAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Buyer Address"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/BuyProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/Buy_qty"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#494a4b"
            android:backgroundTint="#0f90c6"

            android:ems="10"
            android:hint="Quantity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BuyPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Total Price"
                android:padding="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/PaidAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Paid Amount"
                android:inputType="number"
                android:padding="20dp" />

            <TextView
                android:id="@+id/Balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="8dp"
                android:gravity="center"
                android:hint="Balance Amount"
                android:paddingTop="5dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0c6bbe"
        android:text="Book Now"
        android:textColor="#f7f8f9"
        android:textSize="16dp" />
</LinearLayout>