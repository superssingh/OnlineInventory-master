<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBox">
        <item name="android:background">#26c9b3</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EditBox">
        <item name="android:background">@color/Black_transparent_50</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#f4f1f1</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ButtonGreen">
        <item name="android:textColor">#f8f8fa</item>
        <item name="android:background">#1a8ac6</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
